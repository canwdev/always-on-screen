$darkBg = #000
$darkText = #ebebeb
$lightBg = #fff
$lightText = #333
$commonPadding = 10px

html, body {
  height: 100%;
}

body {
  background-color #000
  //background url("https://www.bing.com/th?id=OHR.LionSurfing_ZH-CN7369892268_1920x1080.jpg") no-repeat center/cover
  background-position center
  background-repeat no-repeat
  background-size cover
}

.clock-wrapper {
  overflow: auto;
  width: 100%
  height: 100%
  background url("../images/bg.svg") no-repeat center / cover
  background-color $darkBg
  color $darkText
  position: relative;
  user-select none
  font-family sans-serif

  &.bing {
    background rgba(0, 0, 0, 0.1)
  }

  .settings-wrapper {
    position: absolute;
    top: $commonPadding
    right: $commonPadding
    z-index 99

    button {
      background transparent
      border none
      outline none
      font-size: 20px
      color $darkText
      cursor pointer
      opacity 0.2

      &:hover {
        opacity 1
      }
    }
  }

  .clock-centered {
    overflow: hidden;
    width: 100%
    position: absolute;
    top: 50%
    left: 0
    transform translateY(-50%)
    text-align: center;

    h1, h2 {
      margin 0
    }

    h1 {
      font-size: 16vw
      font-weight: bolder
      line-height: 1.1
    }

    h2 {
      font-size: 6vw
      font-weight normal
    }
  }

  .footnote-wrapper {
    position: absolute;
    bottom: $commonPadding
    left: 0
    width: 100%
    text-align: center;
    z-index 99
    opacity 0.5
    line-height: 1.4

    a {
      font-size: 12px
      color: #fff
      text-decoration: none
    }
  }

  &.light-theme {
    background-color $lightBg
    color $lightText

    .settings-wrapper {
      button {
        color $lightText
      }
    }
  }
}

