.clock-wrapper {
  overflow: auto;
  width: 100%
  height: 100%
  background #000
  color #fff
  position: relative;

  .clock-centered {
    width: 100%
    position: absolute;
    top: 50%
    left: 50%
    transform translate(-50%, -50%)
    text-align: center;

    h1 {
      font-size: 10vw
    }
    h2 {
      font-size: 5vw
    }
  }
}
