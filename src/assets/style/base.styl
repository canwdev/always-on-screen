$darkBg = #000
$darkText = #ebebeb
$lightBg = #fff
$lightText = #333
$commonPadding = 10px

html, body {
  height: 100%;
}

body {
  background-color #000
  //background url("https://www.bing.com/th?id=OHR.LionSurfing_ZH-CN7369892268_1920x1080.jpg") no-repeat center/cover
  background-position center
  background-repeat no-repeat
  background-size cover
}

.clock-wrapper {
  overflow: auto;
  width: 100%
  height: 100%
  background url("../images/bg.svg") no-repeat center / cover
  background-color $darkBg
  color $darkText
  position: relative;
  user-select none
  font-family sans-serif

  &.bing {
    background rgba(0, 0, 0, 0.5)
  }

  .settings-wrapper {
    position: absolute;
    top: $commonPadding
    right: $commonPadding
    z-index 99

    button {
      background transparent
      border none
      outline none
      font-size: 20px
      color $darkText
      cursor pointer
      opacity 0.2

      &:hover {
        opacity 1
      }
    }
  }

  .footnote-wrapper {
    position: absolute;
    bottom: $commonPadding
    left: 0
    width: 100%
    text-align: center;
    z-index 99
    line-height: 1.4

    a {
      opacity 0.5
      font-size: 12px
      color: #fff
      text-decoration: none
      &:hover {
        text-decoration: underline
        opacity 1
      }
    }
  }

  &.light-theme {
    background-color $lightBg
    color $lightText

    .settings-wrapper {
      button {
        color $lightText
      }
    }
  }
}

